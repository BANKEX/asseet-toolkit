.tokens
  .tokens-inner
    h2 Tokens
    //-.tokens-sort
      label Sort by
      select([(ngModel)]="sortBy")
        option(*ngFor="let option of sortOptions, let i = index", [ngValue]="option") {{option.name}}
    .tokens-info.no_tokens(*ngIf="!tokens") You havenâ€™t got any tokens.
    .tokens-list(*ngIf="tokens")
      perfect-scrollbar
        .token(*ngFor="let key of objectKeys(tokens) | orderBy:sortBy.id:sortBy.reverse")
          .token-number
            a((click)="showTransactions(key)", href="javascript:void(0)", title="Show") type {{key}}
          .token-sum {{tokens[key].amount}} tokens ({{tokens[key].part}}%)
          .token-sum(*ngIf="tokens[key].pending.length>0") Blocked: {{calculatePendings(tokens[key])}} tokens
            img(src="/assets/spinner.gif", alt="transaction in process")
          .token-controls
            span.token-transfer((click)="openTransferModal(key, tokens[key])", title="Transfer")
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 16 16">
